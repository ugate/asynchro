{
  "source": {
    "include": ["index.js", "README.md"],
    "includePattern": ".js$",
    "excludePattern": "(node_modules/|docs)"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc"]
  },
  "opts": {
    "destination": "./docs/",
    "encoding": "utf8",
    "private": true,
    "recurse": true,
    "versions": {
      "from": "3.0.0",
      "include": "minor"
    },
    "changelog": {
      "header": "## [${package.version}](${publish.moduleURL}/compare/v${publish.lastVersion}...v${package.version}) (${publish.date})",
      "line": "* [%s](${publish.moduleURL}/commit/%H)",
      "sections": {
        "breaks": {
          "grep": {
            "regexp": "\\[BREAK\\]",
            "ignoreCase": true,
            "extendedRegexp": false,
            "allMatch": false
          },
          "header": "__Breaking Changes:__"
        },
        "features": {
          "grep": {
            "regexp": "\\[FEATURE\\]",
            "ignoreCase": true,
            "extendedRegexp": false,
            "allMatch": false
          },
          "header": "__Features:__"
        },
        "fixes": {
          "grep": {
            "regexp": "\\[FIX\\]",
            "ignoreCase": true,
            "extendedRegexp": false,
            "allMatch": false
          },
          "header": "__Fixes:__"
        }
      }
    },
    "templateProxy": "./node_modules/minami",
    "template": "./jsdoc",
    "tutorials": "./jsdoc/tutorial"
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": true,
    "showInheritedInNav": true,
    "default": {
      "useLongnameInNav": false,
      "includeDate": false,
      "layoutFile": "./jsdoc/tmpl/layout.tmpl",
      "staticFiles": {
        "include": [
          "./node_modules/minami/static",
          "./jsdoc/static"
        ]
      }
    }
  }
}